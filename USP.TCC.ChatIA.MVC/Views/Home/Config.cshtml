@model USP.TCC.ChatIA.MVC.Models.ChatOptions

@{
    var t = Model.Temperature;
    ViewData["Title"] = "Configurações ";
}
<h1>@ViewData["Title"]</h1>


<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    Configuração
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="Temperature" class="form-label">Mais Criativo</label>
                            <div class="d-flex align-items-center justify-content-between">
                                <input type="range" step="0.1" class="form-range" name="Temperature" id="Temperature" min="0.1" max="1" value="@Model.Temperature">
                                <label for="Temperature" class="form-label ms-3">Mais Preciso</label>
                            </div>
                            <span id="temperatureValue" class="badge badge-secondary" style="color: red">@Model.Temperature</span>
                        </div>
                        <div class="mb-3">
                            <label for="MaxTokens" class="form-label">Max Tokens</label>
                            <input type="number" class="form-control" id="MaxTokens" name="MaxTokens" value="@Model.MaxTokens">
                        </div>
                        <div class="mb-3">
                            <label for="NucleusSamplingFactor" class="form-label">Nucleus Sampling Factor</label>
                            <input type="number" step="0.01" class="form-control" id="NucleusSamplingFactor" name="NucleusSamplingFactor" value="@Model.NucleusSamplingFactor">
                        </div>
                        <div class="mb-3">
                            <label for="PresencePenalty" class="form-label">Presence Penalty</label>
                            <input type="number" step="0.01" class="form-control" id="PresencePenalty" name="PresencePenalty" value="@Model.PresencePenalty">
                        </div>
                        <div class="mb-3">
                            <label for="FrequencyPenalty" class="form-label">Frequency Penalty</label>
                            <input type="number" step="0.01" class="form-control" id="FrequencyPenalty" name="FrequencyPenalty" value="@Model.FrequencyPenalty">
                        </div>
                        <div class="mb-3">
                            <label for="ModelBase" class="form-label">Modelo de base</label>
                            <select id="ModelBase" class="form-control">
                                <option value="#" selected>gpt-35-turbo - Otimizado para Gestão de Projetos</option>
                                <option value="#">gpt-35-turbo-16k</option>
                                <option value="#">gpt-35-turbo-instruct</option>
                                <option value="#">text-embedding-ada-002</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Salvar Configuração</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var temperatureInput = document.getElementById('Temperature');
        var temperatureValue = document.getElementById('temperatureValue');

        temperatureInput.addEventListener('input', function () {
            temperatureValue.textContent = temperatureInput.value;
        });
    </script>
}
