@{
    ViewData["Title"] = "Configurações ";
}
<h1>@ViewData["Title"]</h1>


<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    Configuração
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label for="temperature" class="form-label">Temperature</label>
                            <input type="number" step="0.1" class="form-control" id="temperature" value="0.7">
                        </div>
                        <div class="mb-3">
                            <label for="maxTokens" class="form-label">Max Tokens</label>
                            <input type="number" class="form-control" id="maxTokens" value="800">
                        </div>
                        <div class="mb-3">
                            <label for="nucleusSamplingFactor" class="form-label">Nucleus Sampling Factor</label>
                            <input type="number" step="0.01" class="form-control" id="nucleusSamplingFactor" value="0.95">
                        </div>
                        <div class="mb-3">
                            <label for="presencePenalty" class="form-label">Presence Penalty</label>
                            <input type="number" step="0.01" class="form-control" id="presencePenalty" value="0">
                        </div>
                        <div class="mb-3">
                            <label for="frequencyPenalty" class="form-label">Frequency Penalty</label>
                            <input type="number" step="0.01" class="form-control" id="frequencyPenalty" value="0">
                        </div>
                        <div class="mb-3">
                            <label for="ModelBase" class="form-label">Modelo de base</label>
                            <select id="ModelBase" >
                                <option value="#">gpt-35-turbo - Otimizado para Gestão de Projetos</option>
                                <option value="#">gpt-35-turbo-16k</option>
                                <option value="#">gpt-35-turbo-instruct</option>
                                <option value="#">text-embedding-ada-002</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Salvar Configuração</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>